<div class="product-metafields page-width">
  <details class="accordion-product" open>
    <summary class="accordion-header">
      <h3>Descriptif du produit</h3>
    </summary>
    <div class="accordion-body">
      <div class="product-info-grid">
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'biceps-flexed' %}
            </div>
            {% if product.metafields.custom.double_moteur %}
            <strong>Double moteur</strong>
            <p>{{ product.metafields.custom.puissance_moteur | default: 'Non spécifié' }}W *2</p>
            {% else %}
            <strong>Moteur</strong>
            <p>{{ product.metafields.custom.puissance_moteur | default: 'Non spécifié' }}W</p>
            {%endif%}
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'force' %}
            </div>
            <strong>Torque</strong>
            <p>{{ product.metafields.custom.force | default: 'Non spécifié' }} NM</p>
          </div>

          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'material' %}
            </div>
            <strong>Matériel</strong>
            <p>{{ product.metafields.custom.materiel.value | default: 'Non spécifié' }}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'bluetooth' %}
            </div>
            <strong>Bluetooth</strong>
            <p>{{ product.metafields.custom.bluetooth | default: 'Non' }}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'accelerator' %}
            </div>
            <strong>Accélérateur</strong>
            <p>{% if product.metafields.custom.accelerateur == true %}Oui{% elsif product.metafields.custom.accelerateur == false %}Non{% else %}Non spécifié{% endif %}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'assistance' %}
            </div>
            <strong>Assistance</strong>
            <p>{% if product.metafields.custom.assistance == true %}Oui{% elsif product.metafields.custom.assistance == false %}Non{% else %}Non spécifié{% endif %}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'speed' %}
            </div>
            <strong>Vitesse</strong>
            <p>{{ product.metafields.custom.vitesse | default: 'Non spécifié' }}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'weight' %}
            </div>
            <strong>Poids</strong>
            <p>{{ product.metafields.custom.poids.value | default: 'Non spécifié' }}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'battery' %}
            </div>
            <strong>Batterie</strong>
            <p>{{ product.metafields.custom.batterie | default: 'Non spécifié' }}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'suspension' %}
            </div>
            <strong>Suspension avant</strong>
            <p>{% if product.metafields.custom.suspension_avant == true %}Oui{% elsif product.metafields.custom.suspension_avant == false %}Non{% else %}Non spécifié{% endif %}</p>
          </div>
          
          <div class="product-info-item">
            <div class="icon-wrapper">
              {% render 'lucide-icon', name: 'suspension' %}
            </div>
            <strong>Suspension arrière</strong>
            <p>{% if product.metafields.custom.suspension_arri_re == true %}Oui{% elsif product.metafields.custom.suspension_arri_re == false %}Non{% else %}Non {% endif %}</p>
          </div>
          
      </div>
    </div>
  </details>
</div>

{% style %}
.accordion-product {
  margin-block: 1rem;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  overflow: hidden;
}

.accordion-header {
  background: #f9f9f9;
  padding: 1rem 2rem;
  cursor: pointer;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  border-bottom: 1px solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.accordion-header:hover {
  background: #f1f1f1;
}

.accordion-body {
  padding: 1rem 2rem;
  display: none;
  animation: fadeIn 0.3s ease-in-out;
}

details[open] .accordion-body {
  display: block;
}

.product-info-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
}

@media (max-width: 768px) {
  .product-info-grid {
    grid-template-columns: repeat(1, 1fr); /* Adjust to 1 column for smaller screens */
  }
}

.product-info-item {
  display: flex; /* Use flexbox to align the icon and text horizontally */
  align-items: center;
  gap: 12px; /* Add space between the icon and text */
  text-align: left;
}

.icon-wrapper {
  width: 32px; /* Adjust icon size */
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f4f4f4;
  border-radius: 50%; /* Optional: Keep the circular style for the icon */
}

.icon-wrapper img,
.icon-wrapper svg {
  width: 24px;
  height: 24px;
}

.product-info-item strong {
  display: block;
  margin-bottom: 4px;
  font-size: 14px;
  font-weight: bold;
  color: #333;
}

.product-info-item p {
  margin: 0;
  font-size: 14px;
  color: #555;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
{% endstyle %}