{% style %}
  .more-product__information {
    margin-block: 2rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }
  
  .more-product__section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    
    
    border-radius: 16px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .more-product__section_force {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    
    
    border-radius: 16px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  
  .more-product__section img {
    width: 100%;
    max-width: 250px;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .more-product__content {
    max-width: 500px;
    text-align: left;
  }
  
  .more-product__title {
    font-size: 22px;
    font-weight: bold;
    color: #222;
    margin-bottom: 1rem;
  }
  
  .more-product__text {
    font-size: 15px;
    line-height: 1.8;
    color: #555;
    margin-bottom: 1rem;
  }
  
  .more-product__image {
    width: 100%;
    max-width: 300px;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  

  @media screen and (min-width: 768px) {
    .more-product__section {
      flex-direction: row;
      align-items: center;
      justify-content: space-evenly;
      gap: 3rem;
      padding: 3rem;
    }

    .more-product__section_force{
      flex-direction: row-reverse;
      justify-content: space-evenly;
    }
  
    .more-product__section img {
      width: 40%; /* Adjusted for better balance */
      height: auto;
    }
  
    .more-product__content {
      padding-left: 1.5rem;
    }
  
    .more-product__title {
      font-size: 24px;
    }
  
    .more-product__text {
      font-size: 16px;
    }
  }
  
  @media screen and (min-width: 1200px) {
    .more-product__section {
      gap: 4rem;
      padding: 4rem;
    }
  
    .more-product__section img {
      width: 35%;
    }


  }
  {% endstyle %}
  
